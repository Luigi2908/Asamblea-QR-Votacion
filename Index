    <script>
        document.getElementById("currentYear").textContent = new Date().getFullYear();

        document.querySelectorAll('.portal-card').forEach(card => {
            card.addEventListener('click', function(e) {
                const url = this.dataset.url;
                if (url && url !== "#") { // Solo si hay una URL v치lida
                    this.classList.add('clicked');
                    setTimeout(() => {
                        window.location.href = url; // Redirige a la URL base + ?page=X
                    }, 300); 
                } else if (url === "#") { // Si es un placeholder
                    alert("Esta funcionalidad a칰n no est치 disponible o es un enlace de demostraci칩n.");
                     this.classList.remove('clicked'); // No animar si no hay acci칩n real
                }
                // Prevenir comportamiento por defecto si es un <a> con href="#"
                if (this.tagName === 'A' && (url === "#" || !url)) {
                    e.preventDefault();
                }
            });

            card.addEventListener('animationend', function() {
                this.classList.remove('clicked');
            });
        });
    </script>
